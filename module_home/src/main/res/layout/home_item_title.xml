<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bg_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <View
        android:id="@+id/tag_title_top"
        style="@style/SpaceLine"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/tv_center_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tag_title_top"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/size_10dp"
        android:drawablePadding="@dimen/size_10dp"
        android:textSize="@dimen/text_size_18sp"
        android:textColor="@color/home_item_title_text_color"
        android:text="centertitle"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/tag_title_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tag_title_top"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/size_10dp"
            android:drawablePadding="@dimen/size_10dp"
            android:textSize="@dimen/text_size_18sp"
            android:textColor="@color/home_item_title_text_color"
            android:text="title"/>

        <TextView
            android:id="@+id/tv_title_right_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="@dimen/size_8dp"
            android:textSize="@dimen/text_size_14sp"
            android:text="more"
            android:drawableRight="@drawable/ic_back_right"/>
    </LinearLayout>

    <View style="@style/DeepUnderLine"
        android:id="@+id/bottom_line"
        android:layout_below="@id/tag_title_center"/>

</RelativeLayout>