<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <android.support.constraint.ConstraintLayout
            android:id="@+id/brand_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="10dp"
            xmlns:app="http://schemas.android.com/apk/res-auto">
            <ImageView
                android:id="@+id/goods_img_b_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="#c5c5c5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:id="@+id/goods_name_b_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                app:layout_constraintLeft_toLeftOf="@id/goods_img_b_iv"
                app:layout_constraintRight_toRightOf="@id/goods_img_b_iv"
                app:layout_constraintTop_toBottomOf="@id/goods_img_b_iv"
                android:ellipsize="end"
                style="@style/TextBlack16"
                android:text="测试测试测试测试测试测试测试测试测试测试" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/goods_name_b_tv"
                app:layout_constraintRight_toRightOf="@id/goods_name_b_tv"
                app:layout_constraintTop_toBottomOf="@id/goods_name_b_tv"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/goods_price_original_b_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextGray14"
                    android:text="￥1000.0"/>
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/brand_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/brand_b"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            xmlns:app="http://schemas.android.com/apk/res-auto">
            <ImageView
                android:id="@+id/goods_img_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="#c5c5c5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:id="@+id/goods_name_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                app:layout_constraintLeft_toLeftOf="@id/goods_img_iv"
                app:layout_constraintRight_toRightOf="@id/goods_img_iv"
                app:layout_constraintTop_toBottomOf="@id/goods_img_iv"
                android:ellipsize="end"
                style="@style/TextBlack16"
                android:text="测试测试测试测试测试测试测试测试测试测试" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/goods_name_tv"
                app:layout_constraintRight_toRightOf="@id/goods_name_tv"
                app:layout_constraintTop_toBottomOf="@id/goods_name_tv"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/goods_price_original_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextGray14"
                    android:text="￥1000.0"/>
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_weight="1">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/three_some_b"
            android:adjustViewBounds="true"
            />
    </RelativeLayout>
</LinearLayout>