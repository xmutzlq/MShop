<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/size_15dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/my_order_goods_iv"
        android:layout_width="@dimen/size_80dp"
        android:layout_height="@dimen/size_80dp"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/my_order_goods_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/text_color_404040"
            android:text="--"
            android:maxLines="2"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/my_order_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/text_size_12sp"
            android:textColor="@color/color_999999"
            android:text="¥0"/>

        <TextView
            android:id="@+id/my_order_goods_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_12dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/my_order_goods_price"
            android:textSize="@dimen/text_size_11sp"
            android:textColor="@color/color_999999"
            android:text="×0"/>

        <TextView
            android:id="@+id/my_order_goods_price_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_20dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/my_order_goods_num"
            android:textSize="@dimen/text_size_13sp"
            android:textColor="@color/text_color_404040"
            android:text="共0件商品，总金额¥0"/>
    </RelativeLayout>
</LinearLayout>
