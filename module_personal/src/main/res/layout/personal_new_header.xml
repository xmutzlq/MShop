<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <com.qmuiteam.qmui.layout.QMUIFrameLayout
        android:id="@+id/shadow_a_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_14dp"
        android:layout_marginLeft="@dimen/size_14dp"
        android:layout_marginRight="@dimen/size_14dp"
        android:padding="10dp"
        android:background="#f6f6f6"
        app:qmui_borderColor="?attr/qmui_config_color_separator"
        app:qmui_outerNormalColor="?attr/qmui_config_color_background"
        app:qmui_showBorderOnlyBeforeL="true">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avator_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/default_avator"
                app:civ_circle_background_color="#00ff00"
                app:civ_border_color="@android:color/white"
                app:civ_border_width="1dp"/>
            <TextView
                android:id="@+id/user_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_12dp"
                app:layout_constraintTop_toTopOf="@id/avator_iv"
                app:layout_constraintLeft_toRightOf="@id/avator_iv"
                android:text="用户名"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="6dp"
                android:ellipsize="none"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_mumber"
                android:layout_marginBottom="5dp"
                app:layout_constraintLeft_toLeftOf="@id/user_name_tv"
                app:layout_constraintBottom_toBottomOf="@id/avator_iv"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_setting"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:id="@+id/my_order_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_13dp"
                android:text="我的订单"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/avator_iv"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_12dp"
                android:text="查看全部订单>"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/my_order_tv"
                app:layout_constraintBottom_toBottomOf="@id/my_order_tv"/>
            <View style="@style/DeepUnderLine"
                app:layout_constraintTop_toBottomOf="@id/my_order_tv"
                android:layout_marginTop="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/my_order_tv"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/btn_way_for_pay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_way_for_pay"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textSize="@dimen/size_12dp"
                        android:textColor="@color/black"
                        android:text="待付款"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_way_for_deliver"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_way_for_deliver"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textSize="@dimen/size_12dp"
                        android:textColor="@color/black"
                        android:text="待发货"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_way_for_receiver"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_way_for_receive"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textSize="@dimen/size_12dp"
                        android:textColor="@color/black"
                        android:text="待收货"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_comment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_comment"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textSize="@dimen/size_12dp"
                        android:textColor="@color/black"
                        android:text="评价"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_return_saled"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_return_saled"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textSize="@dimen/size_12dp"
                        android:textColor="@color/black"
                        android:text="退款/售后"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </com.qmuiteam.qmui.layout.QMUIFrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:gravity="center_horizontal|center_vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/favor_line_left"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你可能喜欢"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="#a0a0a0"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/favor_line_right"/>
    </LinearLayout>
</LinearLayout>