<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shares_popup_window"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@android:color/transparent"
    >
    <LinearLayout
        android:background="@drawable/bg_white"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="vertical"
            android:gravity="center"

            >
            <LinearLayout
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/share_wechat"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/share_wechat_icon"
                    />
                <ImageView
                    android:id="@+id/share_wechatmoments"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/share_friends_icon"
                    />
                <ImageView
                    android:id="@+id/share_qq"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/share_qq_icon"
                    />
                <ImageView
                    android:id="@+id/share_qzone"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/share_space_ico"
                    />
            </LinearLayout>
            <LinearLayout
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/share_sinaweibo"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/share_weibo_icon"
                    />
                <ImageView
                    android:id="@+id/share_link"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/share_link_icon"
                    />
                <ImageView
                    android:id="@+id/share_shortmessage"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/share_message_icon"
                    />
                <ImageView
                    android:visibility="invisible"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/share_space_ico"
                    />
            </LinearLayout>
        </LinearLayout>
        <include layout="@layout/divider_line_layout"/>
        <TextView
            android:id="@+id/shares_cancel"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="取消"
            android:textColor="@color/gray_66"
            android:textSize="@dimen/text_size_16sp" />
    </LinearLayout>
</RelativeLayout>