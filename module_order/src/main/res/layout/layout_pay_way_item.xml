<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/size_13dp"
    android:orientation="horizontal"
    android:gravity="center_vertical">
    <ImageView
        android:id="@+id/pay_way_iv"
        android:layout_width="@dimen/size_40dp"
        android:layout_height="@dimen/size_40dp"
        android:layout_marginRight="@dimen/size_13dp"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/pay_way_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/color_282828"
        android:textSize="@dimen/text_size_15sp"/>

    <CheckBox
        android:id="@+id/pay_way_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_13dp"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        style="@style/CartCheckbox"/>
</LinearLayout>
