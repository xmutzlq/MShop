<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/size_10dp"
    android:background="@color/common_bg"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/order_goods_img_iv"
        android:layout_width="@dimen/size_100dp"
        android:layout_height="@dimen/size_100dp"
        android:layout_marginRight="@dimen/size_5dp"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/order_goods_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/color_282828"
            android:textSize="@dimen/text_size_14sp"/>

        <TextView
            android:id="@+id/order_goods_des_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_size_13sp"/>

        <TextView
            android:id="@+id/order_goods_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_f44336"
            android:textSize="@dimen/text_size_13sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/order_goods_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/size_10dp"
        android:paddingRight="@dimen/size_10dp"
        android:layout_gravity="center_vertical"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/text_size_13sp"
        android:text="Ã—1"/>
</LinearLayout>
