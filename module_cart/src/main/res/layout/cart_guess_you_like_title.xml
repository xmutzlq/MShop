<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/size_12dp"
    android:paddingBottom="@dimen/size_12dp"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@color/gray_f4">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_cart_like_pic_left"/>
    <TextView
        android:id="@+id/cart_guess_you_like_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_alpha60"
        android:textSize="@dimen/text_size_14sp"
        android:text="@string/cart_guess_you_like_title"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_cart_like_pic_right"/>
</LinearLayout>
