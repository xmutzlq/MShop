<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/size_20dp"
        android:paddingRight="@dimen/size_20dp"
        android:paddingTop="@dimen/size_10dp"
        android:paddingBottom="@dimen/size_10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/server_list_item_iv"
            android:layout_width="@dimen/size_30dp"
            android:layout_height="@dimen/size_30dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/server_list_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_14sp"/>
            <TextView
                android:id="@+id/server_list_item_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5dp"
                android:textColor="@color/gray_D5"
                android:textSize="@dimen/text_size_12sp"/>
        </LinearLayout>
    </LinearLayout>
</layout>