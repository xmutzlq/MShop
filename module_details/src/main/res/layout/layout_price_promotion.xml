<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/detail_layout_price_root"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingLeft="@dimen/size_10dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/bg_gradient_bar_detail_price">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/detail_layout_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_20sp"
                    android:text="¥00.00"/>
                <ImageView
                    android:id="@+id/detail_layout_price_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_detail_price_tag"/>
            </LinearLayout>

            <TextView
                android:id="@+id/detail_layout_promotion_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14sp"
                android:text="市场价：¥00.00"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/detail_layout_promotion_time_root"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/size_20dp"
            android:paddingRight="@dimen/size_20dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/color_20FD644B">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_FD644B"
                android:textSize="@dimen/text_size_11sp"
                android:text="@string/detail_promotion_time"/>
            <cn.iwgang.countdownview.CountdownView
                android:id="@+id/detail_layout_promotion_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/size_5dp"
                app:isHideTimeBackground="false"
                app:isShowDay="false"
                app:isShowMillisecond="false"
                app:isShowTimeBgDivisionLine="false"
                app:isShowHour="true"
                app:isShowMinute="true"
                app:isShowSecond="true"
                app:timeBgRadius="@dimen/size_5dp"
                app:suffixGravity="center"
                app:suffixTextColor="@color/color_f44336"
                app:suffixTextSize="@dimen/text_size_12sp"
                app:timeBgColor="@color/color_f44336"
                app:timeTextColor="@color/white"
                app:timeTextSize="@dimen/text_size_12sp"/>
        </LinearLayout>

    </LinearLayout>
</layout>