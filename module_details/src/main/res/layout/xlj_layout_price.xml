<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/detail_layout_price_root"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/size_15dp"
            android:paddingBottom="@dimen/size_10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/detail_layout_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_2dp"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_17sp"
                android:text="----"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_4dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/detail_layout_promotion_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size_12dp"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_16sp"
                    android:text="¥00.00"/>
                <TextView
                    android:id="@+id/detail_layout_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_C1"
                    android:textSize="@dimen/text_size_12sp"
                    android:text="¥00.00"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_marginTop="@dimen/size_12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_round_angle_left"
            android:visibility="invisible">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_share_"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_3dp"
                android:textColor="@color/gray_AD"
                android:textSize="@dimen/text_size_13sp"
                android:text="@string/str_share"/>
        </LinearLayout>
    </LinearLayout>
</layout>