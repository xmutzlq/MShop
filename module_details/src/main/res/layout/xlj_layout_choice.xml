<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_15dp"
        android:paddingBottom="@dimen/size_15dp"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include
                android:id="@+id/xlj_layout_choice_choose"
                layout="@layout/xlj_layout_choice_item" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/size_15dp"
            android:paddingBottom="@dimen/size_15dp">
            <include
                android:id="@+id/xlj_layout_choice_server"
                layout="@layout/xlj_layout_choice_item" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include
                android:id="@+id/xlj_layout_choice_params"
                layout="@layout/xlj_layout_choice_item" />
        </FrameLayout>
    </LinearLayout>
</layout>