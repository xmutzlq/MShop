<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/detail_btn_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/size_10dp"
        android:paddingRight="@dimen/size_8dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/service"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_2dp"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_11sp"
            android:text="@string/detail_service"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/detail_btn_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/size_8dp"
        android:paddingRight="@dimen/size_8dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/detail_btn_like_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/like"/>
        <TextView
            android:id="@+id/detail_btn_like_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_2dp"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_11sp"
            android:text="@string/detail_like"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/detail_btn_go_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/size_8dp"
        android:paddingRight="@dimen/size_10dp"
        android:paddingTop="@dimen/size_12dp"
        android:paddingBottom="@dimen/size_12dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/detail_btn_go_cart_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/cart"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_2dp"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_11sp"
            android:text="@string/detail_cart"/>
    </LinearLayout>

    <google.architecture.common.widget.RoundButton
        android:id="@+id/detail_btn_buy"
        style="@style/RoundButton"
        android:text="@string/detail_buy_now"
        android:layout_marginRight="@dimen/dp_4"
        app:btnCornerRadius="stadium"
        app:btnPressedRatio="0.8"
        app:btnSolidColor="#B60909" />

    <google.architecture.common.widget.RoundButton
        android:id="@+id/detail_btn_add_cart"
        style="@style/RoundButton"
        android:text="@string/detail_add_cart"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginRight="@dimen/size_8dp"
        app:btnCornerRadius="stadium"
        app:btnPressedRatio="0.8"
        app:btnSolidColor="#AB8A59" />
</LinearLayout>
