<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/transparent">
            <View
                android:id="@+id/space_white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_95dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@color/white"/>
            <FrameLayout
                android:id="@+id/detail_bottom_sheet_iv_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/size_20dp"
                android:paddingBottom="@dimen/size_20dp"
                android:paddingLeft="@dimen/size_10dp"
                android:paddingRight="@dimen/size_10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/goods_cycle_mark">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/detail_bottom_sheet_iv"
                        android:layout_width="@dimen/size_100dp"
                        android:layout_height="@dimen/size_100dp"
                        fresco:placeholderImage="@drawable/image_mark"/>
                </FrameLayout>
            </FrameLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_5dp"
                app:layout_constraintLeft_toRightOf="@+id/detail_bottom_sheet_iv_layout"
                app:layout_constraintBottom_toBottomOf="@+id/detail_bottom_sheet_iv_layout"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/goods_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_20sp"
                    android:text="¥0.00"/>
                <TextView
                    android:id="@+id/goods_save_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_4dp"
                    android:textColor="@color/color_9b9b9b"
                    android:textSize="@dimen/text_size_14sp"
                    android:text="总库存0 店铺库存0"/>
                <TextView
                    android:id="@+id/goods_choose_shown_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_8dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_14sp"
                    android:text="已选择"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/server_close_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_15dp"
                android:layout_marginRight="@dimen/size_20dp"
                app:layout_constraintRight_toRightOf="@+id/space_white"
                app:layout_constraintTop_toTopOf="@+id/space_white"
                android:src="@mipmap/ic_clear"/>
        </android.support.constraint.ConstraintLayout>

        <View style="@style/DeepUnderLine"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/detail_bottom_sheet_rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="vertical"
            android:background="@color/white"/>
    </LinearLayout>
</layout>